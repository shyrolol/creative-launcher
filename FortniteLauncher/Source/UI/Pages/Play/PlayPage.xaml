<Page
    x:Class="FortniteLauncher.Pages.PlayPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FortniteLauncher.Pages"
    xmlns:controls="using:CommunityToolkit.Labs.WinUI"
    NavigationCacheMode="Enabled">

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border x:Name="HeaderBorder" CornerRadius="8" Margin="0,0,0,4" Height="215">
            <Grid>
                <Border x:Name="HeaderBlurBorder" CornerRadius="8">
                    <Border.Background>
                        <SolidColorBrush x:Name="OverlayBrush" Color="#B2000000"/>
                    </Border.Background>
                </Border>
            </Grid>
        </Border>

        <Grid Grid.Row="0" Margin="0,0,0,4">
            <Border Padding="8" x:Name="HeaderProfileBanner">
                <Grid HorizontalAlignment="Left">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TeachingTip x:Name="DownloadInfo"
                                 Title="Downloading Required Files"
                                 Subtitle="{x:Bind Progress}"
                                 FontWeight="SemiBold">
                        <TeachingTip.IconSource>
                            <SymbolIconSource Symbol="Download"/>
                        </TeachingTip.IconSource>
                    </TeachingTip>

                    <StackPanel VerticalAlignment="Center" Grid.Column="1" Margin="15,0,0,0">
                        <TextBlock Text="{x:Bind DisplayUsername, Mode=OneWay}" 
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Style="{ThemeResource TitleTextBlockStyle}"/>
                        <TextBlock Text="{x:Bind Description, Mode=OneWay}" 
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Style="{ThemeResource SubtitleTextBlockStyle}" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   Margin="0,1,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="1" Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="939"/>
            </Grid.ColumnDefinitions>

            <controls:SettingsCard x:Name="DiscordCard"
                                   Grid.Column="0"
                                   Margin="0, 20, 0, 0"
                                   Header="Discord"
                                   Description="Join our Discord server for news, tournaments and more.."
                                   Click="Discord"
                                   FontWeight="SemiBold">
                <controls:SettingsCard.HeaderIcon>
                    <ImageIcon Source="ms-appx:///Content/Texture/UI/T_Discord.png"/>
                </controls:SettingsCard.HeaderIcon>
                <Button x:Name="DiscordButton" 
                        Click="Discord" 
                        Content="View"
                        FontWeight="SemiBold"/>
            </controls:SettingsCard>
        </Grid>

        <controls:SettingsCard x:Name="LaunchButton"
                               x:FieldModifier="public"
                               Grid.Row="2"
                               Tag="Launch"
                               Header="{x:Bind local:PlayPage.Season, Mode=OneTime}"
                               Description="{x:Bind local:PlayPage.Chapter, Mode=OneTime}"
                               Margin="4,10,4,2"
                               IsClickEnabled="True"
                               IsActionIconVisible="False"
                               Click="Launch"
                               FontWeight="SemiBold">
            <controls:SettingsCard.HeaderIcon>
                <FontIcon Glyph="&#xE768;"/>
            </controls:SettingsCard.HeaderIcon>
        </controls:SettingsCard>
    </Grid>
</Page>